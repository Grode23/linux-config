#!/bin/bash

#(Un)comment everything you want

read -p "Email: " EMAIL

# Apps I usually use
sudo apt install -y ubuntu-restricted-extras #Due to copyrights they are not included in Ubuntu by default
sudo apt install -y git #git
sudo apt install -y terminator #terminal
sudo apt install -y torbrowser-launcher

# Development tools that I need and may not be installed by default
sudo apt install -y make
sudo apt install -y cmake
sudo apt install -y gcc
sudo apt install -y g++
sudo apt install -y default-jdk #Java tools like javac
sudo apt install -y maven

# Terminal apps
sudo apt install -y neofetch
sudo apt install -y htop
sudo apt install -y nmap
sudo apt install -y tree
sudo apt install -y net-tools #For ifconfig
sudo apt install -y vim #Vim
sudo apt install -y attr #Attributes

# Tweaks and gnome extensions
sudo apt install -y gnome-tweak-tool
sudo apt install -y libproxy1-plugin-networkmanager gnome-shell-extension-system-monitor
sudo apt install -y chrome-gnome-shell

#Minimize running window on click
gsettings set org.gnome.shell.extensions.dash-to-dock click-action 'minimize'

# For fun
sudo apt install -y cmatrix
sudo apt install -y sl
sudo apt install -y hollywood

#Insert email for git
git config --global user.email $EMAIL

#Aliases
echo "alias lsa='ls -a'" >> ~/.bashrc
echo "alias lsal='ls -al'" >> ~/.bashrc
echo "alias lsl='ls -l'" >> ~/.bashrc
echo "alias pdf='xdg-open'" >> ~/.bashrc
echo "alias up='sudo apt update ; sudo apt upgrade -y'" >> ~/.bashrc

#Remove execute permission since it has to run only once
chmod -x .config_file
